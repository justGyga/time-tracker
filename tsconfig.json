{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES6"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "composite": true,
    "noFallthroughCasesInSwitch": false,
    "outDir": "build"
  }
}